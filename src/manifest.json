{
  "manifest_version": 2,
  "name": "Tab Badge",
  "description": "",
  "version": "",

  "browser_specific_settings": {
    "gecko": {
      "id": "tabbadge@sarics"
    }
  },

  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "64": "icons/icon.svg",
    "96": "icons/icon.svg"
  },

  "permissions": ["http://*/*", "https://*/*", "storage", "tabs"],

  "background": {
    "scripts": ["background/background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": false,
    "open_in_tab": true
  }
}
