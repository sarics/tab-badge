{
  "manifest_version": 2,
  "name": "Tab Badge",
  "description": "",
  "version": "1.0.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "tabbadge@sarics"
    }
  },

  "permissions": ["http://*/*", "https://*/*", "storage", "tabs"],

  "background": {
    "scripts": ["background/background.js"]
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true,
    "browser_style": true
  }
}
